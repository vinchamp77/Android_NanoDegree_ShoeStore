<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DefaultTextBold" parent="DefaultText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultButton" parent="DefaultTextBold">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="DefaultTitle" parent="DefaultTextBold">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="DefaultDescription" parent="DefaultTextBold">
        <item name="android:textAlignment">center</item>
    </style>

</resources>
